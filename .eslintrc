env:
  browser: true
  node: true
  es6: true
  mocha: true

parser: babel-eslint

globals:
  browser: true

extends: airbnb

rules:
  comma-dangle:
    - 2
    - never
  no-underscore-dangle: 0
  react/prefer-stateless-function: 0
  no-unused-expressions: 0
  react/forbid-prop-types: 0
  import/no-extraneous-dependencies: 0
  react/jsx-filename-extension: 0

  new-cap:
    - 2
    - capIsNewExceptionPattern: "[A-Z_]"
